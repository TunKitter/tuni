{
  "manifest_version": 3,
  "name": "Tuni: Interactive for Youtube videos",
  "short_name": "Tuni",
  "description": "Learn,interact,take note with youtube videos and so more powerful features",
  "version": "1.0",
  "permissions": ["scripting", "storage"],
  "author": "tunkit",
  "icons": {
    "128": "./assets/logo/logo_128.png"
  },
  "host_permissions": ["https://www.youtube.com/watch?v=*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["main.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["/assets/icons/*", "/assets/logo/*", "/assets/static/bundle.html"],
      "matches": ["https://www.youtube.com/*"]
    }
  ]
}
